   <extension
         point="org.eclipse.cdt.managedbuilder.core.buildDefinitions">
      <managedBuildRevision
            fileVersion="4.0.0">
      </managedBuildRevision>
      <targetPlatform
            archList="all"
            binaryParser="org.eclipse.cdt.core.ELF;org.eclipse.cdt.core.GNU_ELF;org.eclipse.cdt.core.MachO64;org.eclipse.cdt.core.PE;org.eclipse.cdt.core.Cygwin_PE"
            id="org.eclipse.cdt.cmake.targetPlatform"
            isAbstract="false"
            name="%targetPlatform.name"
            osList="all">
      </targetPlatform>
      <projectType
            buildArtefactType="org.eclipse.cdt.cmake.buildArtefactType.cmake"
            id="org.eclipse.cdt.cmake.CMakeProject"
            isAbstract="false">
         <configuration
               buildArtefactType="org.eclipse.cdt.cmake.buildArtefactType.cmake"
               buildProperties="org.eclipse.cdt.cmake.buildType.default"
               id="org.eclipse.cdt.cmake.debug"
               languageSettingsProviders="org.eclipse.cdt.cmake.lang_set"
               name="%configuration.name.debug">
            <toolChain
                  archList="all"
                  id="org.eclipse.cdt.cmake.toolChain.debug"
                  isAbstract="false"
                  languageSettingsProviders="org.eclipse.cdt.cmake.lang_set"
                  name="%toolChain.name"
                  superClass="org.eclipse.cdt.cmake.toolchain.base">
               <supportedProperties>
                  <property
                        id="org.eclipse.cdt.build.core.buildArtefactType">
                     <value
                           id="org.eclipse.cdt.cmake.buildArtefactType.cmake">
                     </value>
                  </property>
               </supportedProperties>
            </toolChain>
         </configuration>
      </projectType>
      <toolChain
            id="org.eclipse.cdt.cmake.toolchain.base"
            isAbstract="false"
            languageSettingsProviders="org.eclipse.cdt.cmake.lang_set">
         <tool
               command="cmake"
               commandLinePattern="${COMMAND} "
               id="org.eclipse.cdt.cmake.cmake"
               isAbstract="false"
               name="%Tool.cmake"
               natureFilter="both">
<!--            <inputType
                  id="org.eclipse.cdt.cmake.inputType.CMakeListsTxt"
                  multipleOfType="false"
                  sourceContentType="org.eclipse.cdt.cmake.CMakeContentType">
            </inputType>
-->
            <optionCategory
                  id="org.eclipse.cdt.cmake.options"
                  name="CMake Options">
               <enablement
                     type="ALL">
               </enablement>
            </optionCategory>
            <option
                  category="org.eclipse.cdt.cmake.options"
                  defaultValue="false"
                  id="org.eclipse.cdt.cmake.option.trace"
                  isAbstract="false"
                  name="trace"
                  resourceFilter="all"
                  valueType="boolean">
            </option>
            <option
                  category="org.eclipse.cdt.cmake.options"
                  defaultValue="false"
                  id="org.eclipse.cdt.cmake.option.debug"
                  isAbstract="false"
                  name="debug"
                  resourceFilter="all"
                  valueType="boolean">
            </option>
            <option
                  browseType="file"
                  category="org.eclipse.cdt.cmake.options"
                  command="-DCMAKE_TOOLCHAIN_FILE=${value}"
                  id="org.eclipse.cdt.cmake.option.toolchainFile"
                  isAbstract="false"
                  name="toolchain to use (-DCMAKE_TOOLCHAIN_FILE)"
                  resourceFilter="all"
                  valueType="string">
            </option>
            <option
                  category="org.eclipse.cdt.cmake.options"
                  command="-DCMAKE_BUILD_TYPE=${value}"
                  defaultValue="Debug"
                  id="org.eclipse.cdt.cmake.option.buildType"
                  isAbstract="false"
                  name="build type (-DCMAKE_BUILD_TYPE)"
                  resourceFilter="all"
                  valueType="string">
               <listOptionValue
                     value="Debug">
               </listOptionValue>
               <listOptionValue
                     value="Release">
               </listOptionValue>
               <listOptionValue
                     value="RelWithDebInfo">
               </listOptionValue>
               <listOptionValue
                     value="MinSizeRel">
               </listOptionValue>
            </option>
         </tool>
         <builder
               buildfileGenerator="org.eclipse.cdt.cmake.CMakeMakefileGenerator"
               commandLauncher="org.eclipse.cdt.cmake.CommandLauncherRC"
               id="org.eclipse.cdt.cmake.builder"
               isAbstract="false"
               isVariableCaseSensitive="false"
               name="%builder.name">
         </builder>
         <targetPlatform
               id="org.eclipse.cdt.cmake.targetPlatform1"
               isAbstract="false"
               superClass="org.eclipse.cdt.cmake.targetPlatform">
         </targetPlatform>
         <tool
               command="g++"
               errorParsers="org.eclipse.core.GCCErrorParser"
               id="org.eclipse.cdt.cmake.compiler.c++"
               isAbstract="false"
               natureFilter="both"
               superClass="cdt.managedbuild.tool.gnu.cpp.compiler.base">
            <inputType
                  dependencyContentType="org.eclipse.cdt.core.cxxHeader"
                  id="org.eclipse.cdt.cmake.inputType.cpp"
                  languageId="org.eclipse.cdt.core.g++"
                  multipleOfType="false"
                  name="cpp-input"
                  primaryInput="true"
                  sourceContentType="org.eclipse.cdt.core.cxxSource">
            </inputType>
            <outputType
                  id="org.eclipse.cdt.cmake.output.cpp"
                  name="obj"
                  outputContentType="org.eclipse.cdt.core.objectFile">
            </outputType>
         </tool>
         <tool
               command="gcc"
               errorParsers="org.eclipse.core.GCCErrorParser"
               id="org.eclipse.cdt.cmake.compiler.c"
               isAbstract="false"
               natureFilter="both"
               superClass="cdt.managedbuild.tool.gnu.c.compiler.base">
            <inputType
                  dependencyContentType="org.eclipse.cdt.core.cHeader"
                  id="org.eclipse.cdt.cmake.inputType.c"
                  languageId="org.eclipse.cdt.core.gcc"
                  multipleOfType="false"
                  name="c-input"
                  primaryInput="true"
                  sourceContentType="org.eclipse.cdt.core.cSource">
            </inputType>
            <outputType
                  id="org.eclipse.cdt.cmake.outputType2"
                  name="obj"
                  outputContentType="org.eclipse.cdt.core.objectFile">
            </outputType>
         </tool>
         <supportedProperties>
            <property
                  id="org.eclipse.cdt.build.core.buildArtefactType">
               <value
                     id="org.eclipse.cdt.cmake.buildArtefactType.cmake">
               </value>
            </property>
         </supportedProperties>
      </toolChain>
   </extension>
   <extension
         id="cmakeNature"
         name="%extension.name.0"
         point="org.eclipse.core.resources.natures">
<!--     <requires-nature
            id="org.eclipse.cdt.managedbuilder.core.managedBuildNature">
      </requires-nature>
-->
      <runtime>
         <run
               class="org.eclipse.cdt.cmake.CMakeProjectNature">
         </run>
      </runtime>
      <builder
            id="org.eclipse.cdt.cmake.CMakeProjectBuilder">
      </builder>
   </extension>
   <extension
         id="CMakeProjectBuilder"
         name="CMakeProjectBuilder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="true"
            hasNature="true"
            isConfigurable="true">
         <run
               class="org.eclipse.cdt.cmake.CMakeProjectBuilderImpl">
         </run>
      </builder>
   </extension>
