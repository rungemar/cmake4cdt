   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="cmake.runCMakeEntry"
            objectClass="org.eclipse.core.resources.IProject">
         <menu
               id="cmake.menu1"
               label="%menu.label">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               label="%action.label"
               class="org.eclipse.cdt.cmake.popup.actions.RunCMakeAction"
               menubarPath="cmake.menu1/group1"
               enablesFor="1"
               id="cmake.runCMakeAction">
         </action>
         <visibility>
            <objectState
                  name="projectNature"
                  value="org.eclipse.cdt.cmake.cmakeNature">
            </objectState>
         </visibility>
      </objectContribution>
   </extension>
